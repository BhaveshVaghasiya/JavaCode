package test;

public class consecutiveString {

	public static void main(String args[]) {
		String s = "Let's meet l8r 2nite?";
		int result = 0;
		int count = 0;
		for(int i = 0; i<= s.length(); i++) {
			if(Character.toString(s.charAt(i)) != " ") {
				if(Integer.parseInt(String.valueOf(s.charAt(i))) >= 65 && Integer.parseInt(String.valueOf(s.charAt(i))) <= 90) {
					count = count + 1;
				}else {
					count = 0;
				}
			}
			if(result < count) {
				result = count;
			}
		}
		System.out.println("result: "+ result );
	}
}
